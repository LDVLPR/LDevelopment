@model LDevelopment.ViewModels.CommentViewModel


@using (Html.BeginForm("Comment", "Blog", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PostId)

        <div class="form-group">
            <div class="col-md-12">
                @Html.TextAreaFor(model => model.Text, 5, 0, new { @class = "new-comment" })
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="text-center col-md-12">
                <input type="submit" value="@Resources.Create" class="link btn text-uppercase" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}