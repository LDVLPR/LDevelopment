@using LDevelopment.Helpers

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - @Resources.SiteName</title>
        <meta name="description" content="@Resources.SiteDescription" />
        <link rel="alternate" type="application/rss+xml" href="@Url.Action("Feed", "Blog")" />
        <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto" />

        @Styles.Render("~/Content/Styles/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="logo" href='@Url.Action("Index", "Home")'>
                        <img class="img-responsive" src='@Url.Content("~/Content/Images/logo_header.png")' alt="@Resources.SiteName" title="@Resources.SiteName" />
                    </a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav text-uppercase">
                        <li>@Html.ActionLink(Resources.Blog, "Index", "Blog")</li>
                        <li>@Html.ActionLink(Resources.About, "About", "Home")</li>
                        <li>@Html.ActionLink(Resources.Contact, "Contact", "Home")</li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </header>
        <div class="site">

            @RenderBody()

            <footer>
                <div class="container">
                    <div class="copyright">
                        <img class="img-responsive" src='@Url.Content("~/Content/Images/logo_footer.png")' alt="@Resources.SiteName" title="@Resources.SiteName" />
                        <p>&copy; @DateTime.Now.Year @Resources.SiteName</p>
                    </div>
                    <div class="social-buttons">
                        <a href="@ConfigurationHelper.FacebookUrl" target="_blank"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                        <a href="@ConfigurationHelper.LinkedInUrl" target="_blank"><i class="fa fa-linkedin" aria-hidden="true"></i></a>
                        <a href="@ConfigurationHelper.GithubUrl" target="_blank"><i class="fa fa-github" aria-hidden="true"></i></a>
                        <a href="@Url.Action("Feed", "Blog")" target="_blank"><i class="fa fa-rss" aria-hidden="true"></i></a>
                    </div>
                </div>
            </footer>
        </div>
        
        <div id="modal" class="modal"></div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/main")
        @Scripts.Render("~/bundles/analytics")
        @Scripts.Render("~/bundles/insights")
        @Scripts.Render("~/bundles/parallax")
        @RenderSection("scripts", required: false)
    </body>

</html>
